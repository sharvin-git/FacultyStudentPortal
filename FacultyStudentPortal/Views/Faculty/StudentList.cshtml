@using FacultyStudentPortal.ViewModels

@model IEnumerable<StudentListViewModel>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fefbf5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .container-box {
            background-color: #fff;
            border: 1px solid #B89B5C;
            border-radius: 12px;
            padding: 2rem;
            width: 85%;
            margin: 40px auto;
            box-shadow: 0 0 15px rgba(184, 155, 92, 0.3);
            animation: fadeInSlide 0.6s ease-in-out;
            position: relative;
        }

        .btn-back {
            position: absolute;
            top: 20px;
            left: 20px;
            background-color: #B89B5C;
            color: white;
            border: none;
            padding: 6px 16px;
            border-radius: 6px;
            font-weight: 500;
            transition: all 0.3s ease;
            z-index: 10;
        }

            .btn-back:hover {
                background-color: #a28345;
                color: #fff;
                transform: translateY(-1px);
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
            }

        .container-box h2 {
            text-align: center;
            color: #B89B5C;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        table {
            background-color: #fff;
        }

        thead {
            background-color: #B89B5C;
            color: white;
        }

        tbody tr:hover {
            background-color: #fdf5e6;
            transition: background-color 0.3s ease;
        }

        @@keyframes fadeInSlide {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

<div class="container-box">
    <a href="@Url.Action("FacultyDashboard", "Faculty")" class="btn-back">
        ← Back
    </a>

    <h2>Student List (@Model.Count())</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 5%;">#</th>
                <th>Name</th>
                <th style="width: 45%;">Email</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                int index = 1;
                foreach (var student in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@student.FullName</td>
                        <td>@student.Email</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No students found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
