
@{
    ViewData["Title"] = "Student Dashboard";
}
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var name = user?.FullName ?? user?.UserName;
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #212529;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 0.95rem;
        }

        .dashboard-container {
            max-width: 850px;
            margin: 40px auto;
            padding: 2rem;
            background-color: #ffffff;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e3e3e3;
        }

        .greeting {
            font-size: 1.1rem;
            font-weight: 500;
            color: #B89B5C;
        }

        .logout-btn {
            position: absolute;
            top: 20px;
            right: 30px;
        }

        .dashboard-title {
            text-align: center;
            font-size: 1.5rem;
            margin-top: 0.5rem;
            margin-bottom: 2rem;
            color: #B89B5C;
            font-weight: 600;
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 1.25rem;
            margin-top: 1rem;
        }

        .action-card {
            background-color: #fdfdfd;
            border: 2px solid #B89B5C;
            border-radius: 0.75rem;
            padding: 1rem;
            text-align: center;
            color: #212529;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .action-card:hover {
                background-color: #B89B5C;
                color: #fff;
                transform: translateY(-3px);
                box-shadow: 0 6px 16px rgba(0,0,0,0.15);
            }

            .action-card i {
                font-size: 1.7rem;
                margin-bottom: 0.4rem;
                color: #B89B5C;
            }

            .action-card:hover i {
                color: #fff;
            }
    </style>
}

<div class="logout-btn">
    <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-inline">
        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
    </form>
</div>

<div class="dashboard-container">
    <div class="greeting">Hello, @name</div>
    <div class="dashboard-title">Student Portal</div>

    <div class="card-grid">
        <a asp-controller="Student" asp-action="StudentViewAssignments" class="action-card">
            <i class="bi bi-journal-text"></i>
            <div>View Assignments</div>
        </a>

        <a asp-controller="Student" asp-action="ViewGradedAssignments" class="action-card">
            <i class="bi bi-clipboard-check-fill"></i>
            <div>View Assessments</div>
        </a>

        <a asp-controller="Student" asp-action="StudentPerformanceChart" class="action-card">
            <i class="bi bi-bar-chart-line-fill"></i>
            <div>My Performance</div>
        </a>
    </div>
</div>
