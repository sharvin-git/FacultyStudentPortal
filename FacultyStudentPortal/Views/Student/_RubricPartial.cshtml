@using FacultyStudentPortal.ViewModels
@model IEnumerable<StudentViewCriteriaViewModel>
@{
    var first = Model.First();
}

<div> <strong>Graded By:</strong> @first.GradedBy </div>
<table class="table table-sm table-bordered mt-2"> <thead> <tr> <th>Criterion</th> <th>Score</th> <th>Remark</th> </tr> </thead> <tbody> @foreach (var c in Model) {
<tr> <td>@c.CriterionName</td> <td>@($"{c.Score}/{c.MaxScore}")</td> <td>@c.Remark</td> </tr>
}
 </tbody> </table>